{
    "version": 1,
    "supportedProjectTypes": [ "CMakeProjectManager.CMakeProject", "Qt4ProjectManager.Qt4Project" ],
    "id": "S.SpaceCreator Project",
    "category": "I.Projects",
    "trDescription": "Create SpaceCreator project with optional default models.",
    "trDisplayName": "SpaceCreator Project",
    "trDisplayCategory": "Non-Qt Project",
    "enabled": true,

    "options":
    [
        { "key": "ProjectFile", "value": "%{JS: '%{BuildSystem}' === 'qmake' ? '%{ProFile}' : '%{CMakeFile}'}" },
        { "key": "ProFile", "value": "%{JS: Util.fileName('%{ProjectDirectory}/%{ProjectName}', 'pro')}" },
        { "key": "CMakeFile", "value": "%{ProjectDirectory}/CMakeLists.txt" },
        { "key": "AsnFile", "value": "%{JS: Util.fileName('%{Model}', '%{AsnModelExtension}')}" },
        { "key": "AsnRelativePath", "value": "%{JS: Util.relativeFilePath('%{AsnTargetDirectory}', '%{ProjectDirectory}')}" },
        { "key": "AsnFileRelativePath", "value": "%{JS: Util.fileName('AsnRelativePath' + '/' + '%{AsnFile}')}" },
        { "key": "MSCFile", "value": "%{JS: Util.fileName('%{Model}.msc', '%{JS: Util.preferredSuffix('application/x-msc')}')}" },
        { "key": "MSCRelativePath", "value": "%{JS: Util.relativeFilePath('%{MSCTargetDirectory}', '%{ProjectDirectory}')}" },
        { "key": "IVFile", "value": "%{JS: Util.fileName('interfaceview.xml', '%{JS: Util.preferredSuffix('text/xml')}')}" },
        { "key": "IVRelativePath", "value": "%{JS: Util.relativeFilePath('%{IVTargetDirectory}', '%{ProjectDirectory}')}" },
        { "key": "MSCAsnFile", "value": "%{JS: %{AddAsnFile} ? '    language ASN.1;\\\\n    data %{AsnFileRelativePath};' : ''}" },
        { "key": "IVAsnFile", "value": "%{JS: %{AddAsnFile} ? ' asn1file=\"%{AsnFileRelativePath}\"' : ''}" }
    ],

    "pages":
    [
        {
            "trDisplayName": "Project Location",
            "trShortTitle": "Location",
            "typeId": "Project"
        },
        {
            "trDisplayName": "Project Initialization",
            "trShortTitle": "Project Initialization",
            "typeId": "Fields",
            "enabled": true,
            "data":
            [
                {
                    "name": "BuildSystem",
                    "trDisplayName": "Build system:",
                    "type": "ComboBox",
                    "data":
                    {
                        "index": 0,
                        "items":
                        [
                            {
                                "trKey": "qmake",
                                "value": "qmake",
                                "condition": "%{JS: [ %{Plugins} ].indexOf('QmakeProjectManager') >= 0}"
                            },
                            {
                                "trKey": "CMake",
                                "value": "cmake",
                                "condition": "%{JS: [ %{Plugins} ].indexOf('CMakeProjectManager') >= 0}"
                            }
                        ]
                    }
                },
                {
                    "name": "AddAsnFile",
                    "trDisplayName": "Add ASN.1 file",
                    "type": "CheckBox",
                    "data": { "checked": true }
                },
                {
                    "name": "AddMSCFile",
                    "trDisplayName": "Add MSC file",
                    "type": "CheckBox",
                    "data": { "checked": true }
                },
                {
                    "name": "AddIVFile",
                    "trDisplayName": "Add AADL/XML file",
                    "type": "CheckBox",
                    "data": { "checked": true }
                },
                {
                    "name": "Model",
                    "trDisplayName": "Model name:",
                    "visible": "%{JS: (%{AddAsnFile} || %{AddMSCFile})}",
                    "mandatory": true,
                    "type": "LineEdit",
                    "data":
                    {
                        "validator": "[A-Z]([a-zA-Z0-9]|-)*",
                        "fixup": "%{JS: '%{INPUT}'.charAt(0).toUpperCase() + '%{INPUT}'.slice(1) }",
                        "trText": "%{ProjectName}"
                    }
                },
                {
                    "name": "AsnModelExtension",
                    "trDisplayName": "Extension:",
                    "type": "ComboBox",
                    "visible": "%{JS: %{AddAsnFile}}",
                    "data":
                    {
                        "index": 0,
                        "items":
                        [
                            { "trKey": ".asn", "value": ".asn" },
                            { "trKey": ".asn1", "value": ".asn1" }
                        ]
                    }
                },
                {
                    "name": "AsnFileEdit",
                    "type": "LineEdit",
                    "trDisplayName": "ASN.1 name:",
                    "visible": "%{JS: %{AddAsnFile}}",
                    "mandatory": true,
                    "data":
                    {
                        "trText": "%{AsnFile}"
                    }
                },
                {
                    "name": "AsnTargetDirectory",
                    "type": "PathChooser",
                    "trDisplayName": "ASN.1 path:",
                    "visible": "%{JS: %{AddAsnFile}}",
                    "mandatory": true,
                    "data":
                    {
                        "kind": "directory",
                        "basePath": "%{ProjectDirectory}",
                        "path": "%{ProjectDirectory}"
                    }
                },
                {
                    "name": "MSCFileEdit",
                    "type": "LineEdit",
                    "trDisplayName": "MSC name:",
                    "visible": "%{JS: %{AddMSCFile}}",
                    "mandatory": true,
                    "data":
                    {
                        "trText": "%{MSCFile}"
                    }
                },
                {
                    "name": "MSCTargetDirectory",
                    "type": "PathChooser",
                    "trDisplayName": "MSC path:",
                    "visible": "%{JS: %{AddMSCFile}}",
                    "mandatory": true,
                    "data":
                    {
                        "kind": "directory",
                        "basePath": "%{ProjectDirectory}",
                        "path": "%{ProjectDirectory}"
                    }
                },
                {
                    "name": "IVFileEdit",
                    "type": "LineEdit",
                    "trDisplayName": "Interface view (AADL/XML) name:",
                    "visible": "%{JS: %{AddIVFile}}",
                    "mandatory": true,
                    "data":
                    {
                        "trText": "%{IVFile}"
                    }
                },
                {
                    "name": "IVTargetDirectory",
                    "type": "PathChooser",
                    "trDisplayName": "Interface view (AADL/XML) path:",
                    "visible": "%{JS: %{AddIVFile}}",
                    "mandatory": true,
                    "data":
                    {
                        "kind": "directory",
                        "basePath": "%{ProjectDirectory}",
                        "path": "%{ProjectDirectory}"
                    }
                }
            ]
        },
        {
            "trDisplayName": "Kit Selection",
            "trShortTitle": "Kits",
            "typeId": "Kits",
            "enabled": true,
            "data": { "projectFilePath": "%{ProjectFile}" }
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Summary",
            "typeId": "Summary"
        }
    ],
    "generators":
    [
        {
            "typeId": "File",
            "data":
            [
                {
                    "source": "file.pro",
                    "target": "%{ProFile}",
                    "openAsProject": true,
                    "condition": "%{JS: '%{BuildSystem}' === 'qmake'}"
                },
                {
                    "source": "../asn1acn/handleAsn1AcnBuild.pri",
                    "target": "handleAsn1AcnBuild.pri",
                    "openAsProject": false,
                    "condition": "%{JS: '%{BuildSystem}' === 'qmake'}"
                },
                {
                    "source": "../asn1acn/updateSourcesList.pri",
                    "target": "updateSourcesList.pri",
                    "openAsProject": false,
                    "condition": "%{JS: '%{BuildSystem}' === 'qmake'}"
                },
                {
                    "source": "../asn1acn/generateFromAsn1.pri",
                    "target": "generateFromAsn1.pri",
                    "openAsProject": false,
                    "condition": "%{JS: '%{BuildSystem}' === 'qmake'}"
                },
                {
                    "source": "CMakeLists.txt",
                    "target": "CMakeLists.txt",
                    "openAsProject": true,
                    "condition": "%{JS: '%{BuildSystem}' === 'cmake'}"
                },
                {
                    "source": "../asn1acn/asn1sccSettings.cmake",
                    "target": "asn1sccSettings.cmake",
                    "openAsProject": false,
                    "condition": "%{JS: '%{BuildSystem}' === 'cmake'}"
                },
                {
                    "source": "../asn1acn/configureAsn1SccTarget.cmake",
                    "target": "configureAsn1SccTarget.cmake",
                    "openAsProject": false,
                    "condition": "%{JS: '%{BuildSystem}' === 'cmake'}"
                },
                {
                    "source": "../asn1acn/createFilesList.cmake",
                    "target": "createFilesList.cmake",
                    "openAsProject": false,
                    "condition": "%{JS: '%{BuildSystem}' === 'cmake'}"
                },
                {
                    "source": "../asn1acn/template.asn",
                    "target": "%{AsnTargetDirectory}/%{AsnFile}",
                    "openInEditor": true,
                    "condition": "%{AddAsnFile}"
                },
                {
                    "source": "empty.msc",
                    "target": "%{MSCTargetDirectory}/%{MSCFile}",
                    "openInEditor": true,
                    "condition": "%{AddMSCFile}"
                },
                {
                    "source": "interfaceview.xml",
                    "target": "%{IVTargetDirectory}/%{IVFile}",
                    "openInEditor": true,
                    "condition": "%{AddIVFile}"
                }
            ]
        }
    ]
}
